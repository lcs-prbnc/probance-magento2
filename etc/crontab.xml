<?xml version="1.0"?>

<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Cron:etc/crontab.xsd">
    <group id="default">
        <job name="probance_export_catalog" instance="Probance\M2connector\Cron\ExportCatalogCron" method="execute">
            <config_path>crontab/default/jobs/probance_export_catalog/schedule/cron_expr</config_path>
        </job>
        <job name="probance_export_customer" instance="Probance\M2connector\Cron\ExportCustomerCron" method="execute">
            <config_path>crontab/default/jobs/probance_export_customer/schedule/cron_expr</config_path>
        </job>
        <job name="probance_export_cart" instance="Probance\M2connector\Cron\ExportCartCron" method="execute">
            <config_path>crontab/default/jobs/probance_export_cart/schedule/cron_expr</config_path>
        </job>
        <job name="probance_export_order" instance="Probance\M2connector\Cron\ExportOrderCron" method="execute">
            <config_path>crontab/default/jobs/probance_export_order/schedule/cron_expr</config_path>
        </job>
        <job name="probance_export_coupon" instance="Probance\M2connector\Cron\ExportCouponCron" method="execute">
            <config_path>crontab/default/jobs/probance_export_coupon/schedule/cron_expr</config_path>
        </job>
        <job name="probance_log_rotate" instance="Probance\M2connector\Cron\Log" method="execute">
            <schedule>0 0 * * *</schedule>
        </job>
        <job name="probance_files_rotate" instance="Probance\M2connector\Cron\Files" method="execute">
            <schedule>0 0 * * *</schedule>
        </job>
    </group>
</config>
